<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

    <!-- Referencia al archivo de estilos CSS -->
    <link rel="stylesheet" href="/css/style.css">

    <title>Actualización datos de empleado</title>

</head>

<body>
    <div class="container">
        <div class="m-4 d-flex justify-content-center mt-4" style="height: auto;">
            <div class="bg-dark" style="width: 400px; height: auto;">
                <div class=" text-center">
                    <box-icon style="font-size: 50px;">
                        <i class='bx bxs-user text-light'></i>
                    </box-icon>
                    <h4 class="text-light">Edición de datos</h4>
                </div>
                <form id="insertForm" action="/commitUpdateEmployee" method="post">
                    <div class="text-light mb-3 mt-4">
                        <div class="form-group">
                            <label class="p-2 ml-3 ">Nuevo nombre:</label>
                            <input type="text" name="newName" placeholder='<%=employee.Name%>' required
                                style="border-radius: 5px; position: relative; left: 14%; width: 45%;">
                        </div>
                        <div class="form-group">
                            <label class="p-2 ml-3 ">Nueva identificaion:</label>
                            <input type="number" name="newIdentification" placeholder='<%=employee.DocumentValueIdentity%>' required
                                style="border-radius: 5px; position: relative; left: 6.5%; width: 45%;">
                        </div>
                        <div class="form-group">
                            <label class="p-2 ml-3 ">Puesto:</label>
                            <select class="p-1 ml-3 form-select" name="newPosition"
                                style="border-radius: 5px; position: relative; left: 25%;">
                                <option selected value="<%=employee.Position%>">
                                    Actual: <%=employee.Position%>
                                </option>
                                <% positions.forEach((position)=>{ %>
                                    <option value="<%=position.Name%>"><%=position.Name%></option>
                                    
                                <% }) %> 
                            </select>
                        </div>
                        <span class="d-flex mb-3 ml-4" style="color: red">
                            <%= errorMessage %>
                          </span>
                        <div class="form-group">
                            <input type="hidden" name="IdEmpleado" value="<%=employee.Id%>">
                            <button type="submit" title="Confirmar" class="btn btn-outline-light ml-4 mt-4 d-flex"
                                style="font-size: 15px;">
                                Confirmar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="cmn-divfloat-left">
                <a href="http://localhost:3000/listEmployees" title="Volver" class="btn btn-dark cmn-btncircle">
                    <i class='bx bx-arrow-back'></i>
                </a>
            </div>
        </div>
    </div>
</body>
</html>